<%- layout('layout/boilerplate.ejs') -%> 
   <div class="row">
        <h1 class="text-center display-5">
           Editing <%= foundCamp.title %>
        </h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= foundCamp.id %>?_method=PUT " method="post" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class='form-label'for="title">Name</label>
                    <input class="form-control" type="text" name="campground[title]" id="title" placeholder="Name of the camp" value="<%=foundCamp.title  %> " required>
                </div>
                <div  class="mb-3">
                    <label class='form-label'for="location">Location</label>
                    <input class="form-control" type="text" name="campground[location]" id="location" placeholder="Location of the camp" value="<%= foundCamp.location %> " required>
                </div>
                <div  class="mb-3">
                    <label class='form-label'for="image">Upload Images</label>
                    <div class="input-group">
                        <input type="file" name="image" class="form-control" id="image" aria-describedby="inputGroupFileAddon04" aria-label="Upload" multiple>
                      </div>
                </div>
                <div  class="mb-3">
                    <label class='form-label'for="description">Add Description</label>
                    <textarea class="form-control" type="text" name="campground[description]" id="description" placeholder="Add a beautiful description here"  required><%= foundCamp.description%></textarea>
                </div>
             <div class="mb-3"> 
                <label for="price" class="form-label">Campground Price</label>
<div class="input-group"> 
    <span class="input-group-text">$</span>
    <input type="text" class="form-control" id='price' name="campground[price]" value=" <%= foundCamp.price%> "  required>
  </div>
</div> 
<div class="mb-3">
    <% foundCamp.image.forEach(function(img, i){ %>
<img src="<%= img.thumbnail %> " alt="" class="img-thumbnail">
<div class="form-check">
    <input class="form-check-input" type="checkbox" value="<%= img.filename %>" id="image-<%= i%>" name="deleteImage[]">
    <label class="form-check-label" for="image-<%= i %>">
        Check to delete this image
    </label>
  </div>
    <% }) %> 
</div> 
         <button class="btn btn-success mb-3">Update campground</button>
            </form>
            <a href="/campgrounds" class="btn btn-outline-primary">Back</a>
        </div>
    </div>
    
   
    